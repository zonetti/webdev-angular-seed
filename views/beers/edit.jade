form.form-horizontal

	legend Alteração de {{ beer.name }}
	h5 {{ msg }}

	div.form-group
		label.control-label.col-sm-2
			| Nome:
		div.col-sm-4
			input.form-control(type="text", data-ng-model="beer.name")
	
	div.form-group
		label.control-label.col-sm-2
			| Categoria:
		div.col-sm-4
			input.form-control(type="text", data-ng-model="beer.category")		
	
	div.form-group
		label.control-label.col-sm-2
			| Preço:
		div.col-sm-4
			input.form-control(type="number", data-ng-model="beer.price")
	
	div.form-group
		label.control-label.col-sm-2
			| Alcohol:
		div.col-sm-4
			input.form-control(type="number", data-ng-model="beer.alcohol")
	
	div.form-group
		label.control-label.col-sm-2
			| Descrição:
		div.col-sm-4
			textarea.form-control(data-ng-model="beer.description")
	
	div.form-group
		div.col-sm-offset-2.col-sm-4
			button.btn.btn-success(data-ng-click="create(beer)")
				| Salvar